# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/urban_commute
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=urban_commute

# API Keys
# Sign up at https://openweathermap.org/api to get a free API key
WEATHER_API_KEY=your_openweathermap_api_key_here
# Sign up at https://developer.tomtom.com/ to get a free API key
TRAFFIC_API_KEY=your_tomtom_api_key_here
# King County Metro GTFS URLs
KC_METRO_GTFS_URL=https://kingcounty.gov/~/media/depts/metro/schedules/gtfs/current-feed.zip
KC_METRO_GTFS_RT_URL=https://api.pugetsound.onebusaway.org/api/where

# Redis cache configuration (for local development, you can use the docker-compose redis service)
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=your_secret_key_for_jwt

# CORS settings (important for frontend-backend communication)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,*

# Logging
LOG_LEVEL=INFO